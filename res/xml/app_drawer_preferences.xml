<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <SwitchPreference
        android:key="pref_allapps_show_label"
        android:title="@string/app_show_label_title"
        android:summary="@string/allapps_show_label_summary"
        android:defaultValue="true"
        android:persistent="true"/>

    <Preference
        android:key="hidden_app"
        android:title="@string/hide_app"
        android:summary="@string/hide_app_sum"/>

    <PreferenceCategory
        android:key="allapp_grid_category"
        android:title="@string/home_grid_title">

        <ListPreference
            android:key="pref_grid_allappcolumns"
            android:title="@string/number_of_columns_title"
            android:summary="%s"
            android:entries="@array/grid_names"
            android:entryValues="@array/grid_values"
            android:defaultValue="-1"
            android:persistent="true" />

        <ListPreference
            android:key="pref_grid_allapprows"
            android:title="@string/number_of_rows_title"
            android:summary="%s"
            android:entries="@array/grid_names"
            android:entryValues="@array/grid_values"
            android:defaultValue="-1"
            android:persistent="true" />

    </PreferenceCategory>

</PreferenceScreen>

